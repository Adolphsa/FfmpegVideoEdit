<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始选取图片"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/startJpgToVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始生成视频"
        app:layout_constraintTop_toBottomOf="@+id/selectImage"
        app:layout_constraintLeft_toLeftOf="@+id/selectImage"
        />

    <Button
        android:id="@+id/startMergeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始合成视频"
        app:layout_constraintTop_toBottomOf="@+id/startJpgToVideo"
        app:layout_constraintLeft_toLeftOf="@+id/startJpgToVideo"
        />
    <Button
        android:id="@+id/startAddMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加背景音乐"
        app:layout_constraintTop_toBottomOf="@+id/startMergeVideo"
        app:layout_constraintLeft_toLeftOf="@+id/startMergeVideo"
        />

    <Button
        android:id="@+id/startScaleVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转压缩视频"
        app:layout_constraintTop_toBottomOf="@+id/startAddMusic"
        app:layout_constraintLeft_toLeftOf="@+id/startAddMusic"
        />

    <Button
        android:id="@+id/deleteAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除音频"
        app:layout_constraintTop_toBottomOf="@+id/startScaleVideo"
        app:layout_constraintLeft_toLeftOf="@+id/startScaleVideo"
        />

    <Button
        android:id="@+id/videoSplicing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="横向拼接"
        app:layout_constraintTop_toBottomOf="@+id/deleteAudio"
        app:layout_constraintLeft_toLeftOf="@+id/deleteAudio"
        />

    <Button
        android:id="@+id/getVideoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取视频信息"
        app:layout_constraintTop_toBottomOf="@+id/videoSplicing"
        app:layout_constraintLeft_toLeftOf="@+id/videoSplicing"
        />

    <Button
        android:id="@+id/addBlackBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加黑边"
        app:layout_constraintTop_toBottomOf="@+id/getVideoInfo"
        app:layout_constraintLeft_toLeftOf="@+id/getVideoInfo"
        />

    <Button
        android:id="@+id/startSelectMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始选择媒体"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>